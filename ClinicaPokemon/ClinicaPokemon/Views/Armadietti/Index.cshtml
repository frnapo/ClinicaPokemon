@model IEnumerable<ClinicaPokemon.Models.Armadietti>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-color: #002171;
    }

    .custom-card {
        background-color: #002171;
    } 

</style>



<div class="container ">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card my-3 border-white custom-card">
                    <div class="card-body">
                        <h5 class="card-title text-white">Armadietto Numero: @Html.DisplayFor(modelItem => item.NumeroArmadietto)</h5>
                        <p class="card-text">

                        </p>
                        <a href="@Url.Action("Index", "Cassetti", new { FK_idArmadietto = item.idArmadietto })" class="btn btn-dark text-white">Prosegui su Cassetti</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

