@model ClinicaPokemon.Models.Visite

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Visite</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h5>Data visita</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DataVisita, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DataVisita, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h5>Esame obiettivo</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EsameObiettivo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EsameObiettivo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h5>Descrizione cura</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DescrizioneCura, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DescrizioneCura, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h5>Pokémon</h5>
        <div class="col-md-10">
            @Html.DropDownList("FK_idAnimale", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FK_idAnimale, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Indietro", "Index", "Animali")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
