<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokémon Center</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/assets/img/16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/assets/img/32x32.png">
    <link rel="icon" type="image/png" sizes="48x48" href="~/Content/assets/img/48x48.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark shadow" id="@(ViewContext.RouteData.Values["controller"] + "-navbar")">

        <div class="container d-flex justify-content-between">
            <div>
                <ul class="navbar-nav">
                    <li class="">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white me-3" })</li>
                    <li class="">@Html.ActionLink("Ricerca", "Index", "Home", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white" })</li>
                </ul>
            </div>

            <div class="mx-auto">
                <img src="~/Content/assets/img/logo.png" class="ms-3" alt="logo" width="200" />
            </div>

            <div>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto d-flex align-items-center">
                        @if (User.IsInRole("Utente") || User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Anagrafa", "CreateForUser", "Animali", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white me-3" })</li>
                            <li>@Html.ActionLink("Acquista", "Index", "Prodotti", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white me-3" })</li>
                        }
                        @if (User.IsInRole("Veterinario") || User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Pokédex", "Index", "Animali", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white me-3" })</li>
                        }
                        @if (User.IsInRole("Dottore") || User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Farmacia", "Index", "Armadietti", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white me-3" })</li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Registrati", "Register", "Home", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white me-3" })</li>
                            <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white" })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "fs-5 nav-link rounded-pill px-4 py-1 border border-1 border-white" })</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    <footer id="@(ViewContext.RouteData.Values["controller"] + "-footer")">
        <p class="p-5 pb-0 text-center text-white m-0">PokémonCenter - Tutti i diritti riservati</p>
        <p class="pb-5 text-center text-white m-0">© 2024 - TeamRocket Epicode</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        AOS.init();
    </script>
</body>
</html>
