@model ClinicaPokemon.Models.Utenti

@{
    ViewBag.Title = "Login";
}

<div id="second-bg" class="bg-white bg-opacity-10 shadow text-white pb-2">
    <div class="bg-white bg-opacity-10 shadow text-white">
        <h2 class="text-center fw-bold display-3 pb-2 my-4 shadow">Login</h2>


        <div class="container" style="padding-bottom: 1px">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group text-center">
                        <p class="p-0 my-2">Username</p>
                        <div class="mx-auto col-6 text-center">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control py-1 mx-auto" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <p class="p-0 my-2">Password</p>
                        <div class="mx-auto col-6 text-center">
                            @Html.EditorFor(model => model.Psw, new { htmlAttributes = new { @class = "form-control py-1 mx-auto" } })
                            @Html.ValidationMessageFor(model => model.Psw, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <p class="text-center my-3" style="margin-inline: 15%"><span class="fw-bolder">Non hai ancora un account?</span> Inizia a prenderti cura del tuo Pokémon <span class="fw-bolder">@Html.ActionLink("registrandoti qui.", "Register", "Home", new { }, new { @class = "text-decoration-none text-dark" })</span></p>

                    <div class="form-group text-center">
                        <div class="mx-auto col-6 text-center">
                            <input type="submit" value="Login" class="mx-auto fs-4 bg-transparent nav-link rounded-pill p-2 px-3 my-5 w-100" />
                        </div>
                    </div>
                </div>
            }
        </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    @* ------------------------------ TOASTS --------------------------------- *@

    @if (TempData["LoginFallito"] != null)
    {
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.error('@TempData["LoginFallito"]')
        </script>
    }

    @if (TempData["RegistrazioneRiuscita"] != null)
    {
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.success('@TempData["RegistrazioneRiuscita"]')
        </script>
    }

